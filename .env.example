# Authentication (optional but recommended)
AUTH_LOGIN=admin
AUTH_PASSWORD=your_secure_password_here

# LLM API Key (OpenRouter)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here

# Telegram Bot (optional - for Telegram integration)
